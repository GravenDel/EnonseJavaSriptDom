        <button>Next</button>
    </main>
    <script>
        let tab = document.querySelectorAll("input")    
        let i = 0
        
        document.querySelector("button").addEventListener("click",()=>{
            tab[i].focus()
            tab[i].style.borderColor= "lightblue"
            i == tab.length-1 ? i = 0  : i++
        })

    </script>

